def evaluate_preconditions(self, preconditions, local_vars):
    for cond in preconditions:
        left = local_vars.get(cond["left"])
        right = cond["right"]
        op = cond["operator"]
        if op == "!=" and left == right:
            return False
        elif op == "==" and left != right:
            return False
        # Add more operators as needed
    return True
